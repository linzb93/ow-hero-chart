<html>
<head>
  <link href="https://cdn.bootcss.com/chosen/1.8.6/chosen.min.css" rel="stylesheet">
  <link rel="stylesheet" href="css/style.css">
</head>
<body>
  <div class="wrapper">
    <button class="btn-add-data" id="addData">添加本日数据</button>
    <div class="chart-con">
      <div class="clearfix">
        <span>英雄：</span>
        <select id="hero" data-placeholder="请选择">
          <option value></option>
        </select>
        <span>分类：</span>
        <select id="mainType" data-placeholder="请选择">
          <option value></option>
        </select>
        <span>子分类：</span>
        <select id="subType" data-placeholder="请选择">
          <option value></option>
        </select>
        <span>时间：</span>
        <span>
          <input type="radio" name="time-type" value="day" checked>日
          <input type="radio" name="time-type" value="week">周
        </span>
      </div>
      <div class="chart" id="chart"></div>
    </div>
  </div>
  <div class="append-box">
    <div class="overlay"></div>
    <div class="append-main">
      <h1>添加本日数据</h1>
      <a class="close" href="javascript:;" title="">×</a>
      <textarea></textarea>
      <button class="submit" id="submit">提交</button>
    </div>
  </div>
  <div class="msgbox">
    <i>!</i>
    <span></span>
  </div>
  <script src="https://cdn.bootcss.com/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdn.bootcss.com/chosen/1.8.6/chosen.jquery.min.js"></script>
  <script src="https://cdn.bootcss.com/echarts/4.3.0/echarts.min.js"></script>
  <script src="js/index.js"></script>
</body>
</html>